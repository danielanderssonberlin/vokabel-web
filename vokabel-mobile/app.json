{
  "expo": {
    "name": "vokabel-mobile",
    "slug": "vokabel-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vokabelapp.mobile",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow Vokabel App to use speech recognition",
        "NSMicrophoneUsageDescription": "Allow Vokabel App to access the microphone",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.vokabelapp.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Vokabel App to access the microphone",
          "speechRecognitionPermission": "Allow Vokabel App to use speech recognition"
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "a3a60175-3ef1-498a-904f-74ee5133eefc"
      }
    }
  }
}
